{
  "name": "kanban-board",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && composer install",
    "lint:frontend": "cd frontend && npm run eslint",
    "lint:check:frontend": "cd frontend && npm run eslint:check",
    "format:frontend": "cd frontend && npm run prettier",
    "format:check:frontend": "cd frontend && npm run prettier:check",
    "test:frontend": "cd frontend && npm run test:unit",
    "lint:backend": "cd backend && composer run pint",
    "lint:check:backend": "cd backend && composer run pint -- --test",
    "test:backend": "cd backend && make coverage",
    "test:backend:unit": "cd backend && make test-unit",
    "test:backend:feature": "cd backend && make test-feature",
    "prepare": "husky"
  },
  "lint-staged": {
    "frontend/src/**/*.{js,ts,vue}": [
      "npm run lint:frontend",
      "npm run format:frontend"
    ],
    "backend/**/*.php": [
      "npm run lint:backend"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Leonelmarianog/kanban-board.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Leonelmarianog/kanban-board/issues"
  },
  "homepage": "https://github.com/Leonelmarianog/kanban-board#readme",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
