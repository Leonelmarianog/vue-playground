{
  "name": "kanban-board",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && composer install",
    "install:ci:frontend": "cd frontend && npm ci",
    "install:ci:backend": "cd backend && composer install -n --prefer-dist",
    "build:frontend": "cd frontend && npm run build",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:check:frontend": "cd frontend && npm run lint:check",
    "format:frontend": "cd frontend && npm run format",
    "format:check:frontend": "cd frontend && npm run format:check",
    "typecheck:frontend": "cd frontend && npm run typecheck",
    "test:unit:frontend": "cd frontend && npm run test:unit",
    "test:e2e:frontend": "cd frontend && npm run test:e2e",
    "test:coverage:frontend": "cd frontend && npm run test:coverage",
    "format:backend": "cd backend && composer run format",
    "format:check:backend": "cd backend && composer run format:check",
    "lint:check:backend": "cd backend && composer run lint:check",
    "test:coverage:backend": "cd backend && make coverage",
    "test:unit:backend": "cd backend && make test-unit",
    "test:feature:backend": "cd backend && make test-feature",
    "prepare": "husky"
  },
  "lint-staged": {
    "frontend/src/**/*.{js,ts,vue}": [
      "npm run format:frontend",
      "npm run lint:frontend"
    ],
    "backend/**/*.php": [
      "npm run format:backend"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Leonelmarianog/kanban-board.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Leonelmarianog/kanban-board/issues"
  },
  "homepage": "https://github.com/Leonelmarianog/kanban-board#readme",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
